<resources>

    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="customHeaderTitleSubtitle">
        <item name="android:layout_height">120dip</item>
    </style>

    <style name="customFooterLinkMenu">
        <item name="android:background">#c2c2c2</item>
        <item name="android:layout_height">50dip</item>
    </style>

    <style name="layout_menu_btn_2">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="layout_menu_btn_1_hover">
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/gradient_gold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="layout_menu_btn_1">
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

</resources>