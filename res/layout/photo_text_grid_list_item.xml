<?xml version="1.0" encoding="utf-8"?>
<com.portfolio.components.PhotoTextGridListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowList"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_weight="1"
   >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150sp"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tittle_item_list"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_page_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="100dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/text_example"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</com.portfolio.components.PhotoTextGridListItem>