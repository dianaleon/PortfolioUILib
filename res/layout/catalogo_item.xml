<?xml version="1.0" encoding="utf-8"?>
<com.portfolio.components.CatalogoItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_weight="1"
    android:background="@drawable/gradient_light_gold" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120sp"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tittle_item_list"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_page_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:minHeight="100dp"
            android:paddingLeft="10dp"
            android:text="@string/text_example"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

</com.portfolio.components.CatalogoItem>