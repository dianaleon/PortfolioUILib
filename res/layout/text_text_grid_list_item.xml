<?xml version="1.0" encoding="utf-8"?>
<com.portfolio.components.TextTextGridListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_weight="1" >

    <TextView
        android:id="@+id/tittle_item_list_left"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:maxLines="1"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tittle_item_list"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_page_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:minHeight="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/text_example"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</com.portfolio.components.TextTextGridListItem>